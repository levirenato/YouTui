# YouTui Theme Configuration
# Copy this file to ~/.config/youtui/themes.toml to customize

[theme]
# Available themes: catppuccin-mocha (more themes coming soon)
active = "catppuccin-mocha"

# Catppuccin Mocha Theme Colors
[catppuccin-mocha]
name = "Catppuccin Mocha"

# Accent colors
rosewater = "#f5e0dc"
flamingo = "#f2cdcd"
pink = "#f5c2e7"
mauve = "#cba6f7"
red = "#f38ba8"
maroon = "#eba0ac"
peach = "#fab387"
yellow = "#f9e2af"
green = "#a6e3a1"
teal = "#94e2d5"
sky = "#89dceb"
sapphire = "#74c7ec"
blue = "#89b4fa"
lavender = "#b4befe"

# Text colors
text = "#cdd6f4"
subtext1 = "#bac2de"
subtext0 = "#a6adc8"

# Overlay colors
overlay2 = "#9399b2"
overlay1 = "#7f849c"
overlay0 = "#6c7086"

# Surface colors
surface2 = "#585b70"
surface1 = "#45475a"
surface0 = "#313244"

# Base colors
base = "#1e1e2e"
mantle = "#181825"
crust = "#11111b"

# UI Mapping
[catppuccin-mocha.ui]
focused_border = "blue"      # Color for focused panel borders
unfocused_border = "surface0" # Color for unfocused panel borders
background = "base"           # Main background
text = "text"                 # Primary text
success = "green"             # Success messages
error = "red"                 # Error messages
warning = "yellow"            # Warning messages
accent = "mauve"              # Accent elements (e.g., player panel)
highlight = "sapphire"        # Highlighted items

# Future themes can be added here following the same structure
# [gruvbox]
# name = "Gruvbox Dark"
# ...
